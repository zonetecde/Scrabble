<UserControl x:Class="Scrabble_Serveur.UC.GameBoard.UserControl_Cell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Scrabble_Serveur.UC.GameBoard"
             mc:Ignorable="d" 
             d:DesignHeight="42.7" d:DesignWidth="42.7" MouseEnter="UserControl_MouseEnter" MouseDown="UserControl_MouseDown">

    <Border MouseEnter="UserControl_MouseEnter" BorderBrush="White" BorderThickness="2,2,2,2">
        <Grid x:Name="Grid_Cell">
            <TextBlock  MouseEnter="UserControl_MouseEnter" Visibility="Hidden" x:Name="textblock_bonus" FontFamily="Consolas" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontStyle="Normal" TextDecorations="{x:Null}" FontSize="11">
                
            </TextBlock>

            <Image  MouseEnter="UserControl_MouseEnter" Visibility="Hidden" x:Name="img_blackStar" Source="/UC/GameBoard/BlackStar.png" Margin="5,5,5,5"/>
            <Label Width="0" Height="0"/>

        </Grid> 
        
        
    </Border>
</UserControl>
