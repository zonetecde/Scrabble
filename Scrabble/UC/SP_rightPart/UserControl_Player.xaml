<UserControl x:Class="Scrabble.UC.SP_rightPart.UserControl_Player"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Scrabble.UC.SP_rightPart"
             mc:Ignorable="d" 
             Height="100" d:DesignWidth="800">
    <UserControl.Background>
        <RadialGradientBrush>
            <GradientStop x:Name="gradientStop_selected" Color="Transparent" Offset="0.36"/>
            <GradientStop Color="Transparent" Offset="1"/>
        </RadialGradientBrush>
    </UserControl.Background>
    <Grid>
        <Label x:Name="label_nom" Content="Nom du joueur" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Gill Sans MT" FontSize="40" Foreground="#FF0C1880"/>
        <Label x:Name="label_point" Content="0 point(s)" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" HorizontalAlignment="Right" VerticalAlignment="Center" FontFamily="Gill Sans MT" FontSize="40" Foreground="Red"/>
    </Grid>
</UserControl>
