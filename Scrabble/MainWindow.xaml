<Window x:Class="Scrabble.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scrabble"
        mc:Ignorable="d"
        Title="Scrabble" MinHeight="700" MinWidth="933" WindowStartupLocation="CenterScreen" WindowState="Maximized" SizeToContent="Manual" SizeChanged="Window_SizeChanged" Loaded="Window_Loaded">
    <Grid>
        <Grid Visibility="Visible" x:Name="grid_Game">
            <StackPanel x:Name="stackPanel_leftPart" Width="200" HorizontalAlignment="Left" Background="#FFFBE3E3">

            </StackPanel>

            <WrapPanel Width="512" Height="512" x:Name="gameBoard" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FF212121"/>

            <StackPanel x:Name="stackPanel_rightPart" Width="200" HorizontalAlignment="Right"  Background="#FFFBE3E3">

            </StackPanel>
        </Grid>

        <Grid x:Name="Grid_Menu" Visibility="Visible" Background="#CC000000">
            <Border HorizontalAlignment="Center" VerticalAlignment="Center" Width="800" Height="500" CornerRadius="50,50,50,50" >
                <Border.Background>
                    <ImageBrush ImageSource="resources/menu_background.jpg"/>
                </Border.Background>
                <Grid>
                    <Image Source="resources/logo.png" Height="224" VerticalAlignment="Top" />
                    <Button HorizontalAlignment="Center" Content="Trouver une partie" VerticalAlignment="Top" Height="100" Width="400" Background="White" BorderBrush="Black" FontFamily="Gill Sans MT" FontSize="30" VerticalContentAlignment="Center" Margin="0,229,0,0" Click="Button_TrouverUnePartie_Click" >
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="20"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button HorizontalAlignment="Center" Content="Partie privée" VerticalAlignment="Top" Height="100" Width="400" Background="White" BorderBrush="Black" FontFamily="Gill Sans MT" FontSize="30" VerticalContentAlignment="Center" Margin="0,334,0,0">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="20"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </Border>

        </Grid>

        <Grid x:Name="Grid_Login" Visibility="Hidden">
            <Grid.Background>
                <ImageBrush ImageSource="resources/login_background.png"/>
            </Grid.Background>
            <Image Source="resources/logo.png" Height="300" VerticalAlignment="Top" Margin="0,0,0,0" />

            <Label Content="Bienvenue !" FontSize="70" FontFamily="Gill Sans MT" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,70"/>
            <Label Content="Entrez votre pseudo :" FontSize="55" FontFamily="Gill Sans MT" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,75,0,0"/>
            <TextBox x:Name="textBox_pseudo" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,250,0,0" Height="80" Width="400" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Gill Sans MT" FontSize="40">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="30"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <Button HorizontalAlignment="Center" Content="Jouer" VerticalAlignment="Bottom" Height="50" Width="250" Background="White" BorderBrush="Black" FontFamily="Gill Sans MT" FontSize="25" VerticalContentAlignment="Center" Margin="0,0,0,100" Click="Button_Play_Click">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Grid>
</Window>
